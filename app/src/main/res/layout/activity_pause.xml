<!DOCTYPE LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xml_border"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPauseLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_pause"
        android:textAlignment="center"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/extra_small_padding_size">

        <Button
            android:id="@+id/btnPauseResume"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/xml_btn_style"
            android:text="@string/game_resume" />

        <ImageButton
            android:id="@+id/btnPauseSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/xml_btn_style"
            android:contentDescription="@string/activity_settings"
            android:src="@mipmap/ico_settings"
            android:text="@string/activity_settings" />

        <ImageButton
            android:id="@+id/btnPauseHelp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/xml_btn_style"
            android:contentDescription="@string/activity_help"
            android:src="@mipmap/ico_help"
            android:text="@string/activity_help" />

        <Button
            android:id="@+id/btnPauseExit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/xml_btn_style"
            android:text="@string/game_exit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_small_padding_size"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:contentDescription="@string/icd_help_hud"
                    android:background="@mipmap/icon_health"/>

            <ProgressBar
                android:id="@+id/pgrsHealth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_small_padding_size"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:contentDescription="@string/icd_help_hud"
                    android:background="@mipmap/icon_buff_occu"/>

            <ProgressBar
                android:id="@+id/pgrsRange"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_small_padding_size"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:contentDescription="@string/icd_help_hud"
                    android:background="@mipmap/icon_buff_bpow"/>

            <ProgressBar
                android:id="@+id/pgrsPower"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTooltip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding_size"
        android:text="@string/pause_hint_default"/>
</LinearLayout>